        <Label Content="제조사" HorizontalAlignment="Left" Margin="414,195,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PDmaker" HorizontalAlignment="Left" Margin="489,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <Label Content="가격" HorizontalAlignment="Left" Margin="414,233,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="PDprice" HorizontalAlignment="Left" Margin="489,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>

